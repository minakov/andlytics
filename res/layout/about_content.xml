<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aboutscrollview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/andBackground"
    android:orientation="vertical"
    android:padding="5dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/about_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dip"
                android:text="@string/about_text" />

            <ImageView
                android:id="@+id/about_socialmedia_github"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/about_text"
                android:clickable="true"
                android:onClick="onOpenGithubClick"
                android:padding="6dip"
                android:src="@drawable/icon_social_github" />

            <ImageView
                android:id="@+id/about_socialmedia_googleplus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/about_text"
                android:layout_toRightOf="@+id/about_socialmedia_github"
                android:clickable="true"
                android:onClick="onOpenGoogleplusClick"
                android:padding="6dip"
                android:src="@drawable/icon_social_googleplus" />

            <ImageView
                android:id="@+id/about_socialmedia_twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/about_text"
                android:layout_toRightOf="@+id/about_socialmedia_googleplus"
                android:clickable="true"
                android:onClick="onOpenTwitterClick"
                android:padding="6dip"
                android:src="@drawable/icon_social_twitter" />

            <ImageView
                android:id="@+id/about_socialmedia_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/about_text"
                android:layout_toRightOf="@+id/about_socialmedia_twitter"
                android:clickable="true"
                android:onClick="onOpenFacebookClick"
                android:padding="6dip"
                android:src="@drawable/icon_social_facebook" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/feedback_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/image_button"
            android:clickable="true"
            android:onClick="onOpenFeedbackClick"
            android:padding="5dp" >

            <TextView
                style="@style/MainTableText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:padding="5dp"
                android:text="@string/feedback"
                android:textColor="#fff"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:id="@+id/about_thirdsparty_credits_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dip"
            android:paddingTop="20dip"
            android:text="@string/about_thirdsparty_credits_title" />

        <LinearLayout
            android:id="@+id/about_thirdsparty_credits_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dip" >

            <WebView
                android:id="@+id/about_thirdsparty_credits"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#FFF" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>